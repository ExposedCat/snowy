<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.snowy" path="/org/gnome/shell/extensions/snowy/">
        <!-- FLAKES -->
        <key type="s" name="flake-icons">
            <default>"❅,❆,❄"</default>
            <summary>Snowflake icons</summary>
            <description />
        </key>
        <!-- MIN SIZE -->
        <key type="i" name="min-size">
            <default>20</default>
            <summary>Minimal snowflake size</summary>
            <description />
        </key>
        <!-- MAX SIZE -->
        <key type="i" name="max-size">
            <default>30</default>
            <summary>Maximal snowflake size</summary>
            <description />
        </key>
        <!-- INTERVAL -->
        <key type="i" name="interval">
            <default>2000</default>
            <summary>Interval of falling (in ms)</summary>
            <description />
        </key>
        <!-- MIN FLAKES -->
        <key type="i" name="min-flakes">
            <default>1</default>
            <summary>Minimal snowflakes number per fall</summary>
            <description />
        </key>
        <!-- MAX FLAKES -->
        <key type="i" name="max-flakes">
            <default>5</default>
            <summary>Maximal snowflakes number per fall</summary>
            <description />
        </key>
        <!-- FLAKES LIMIT -->
        <key type="i" name="flakes-limit">
            <default>30</default>
            <summary>Maximal snowflakes number on screen</summary>
            <description />
        </key>
        <!-- MIN DURATION -->
        <key type="i" name="min-duration">
            <default>1</default>
            <summary>Fastest a snowflake can fall</summary>
            <description />
        </key>
        <!-- MAX DURATION -->
        <key type="i" name="max-duration">
            <default>5</default>
            <summary>Slowest a snowflake can fall</summary>
            <description />
        </key>
        <!-- MIN ROTATION -->
        <key type="i" name="min-rotation">
            <default>1</default>
            <summary>Minimal rotation a snowflake can have</summary>
            <description />
        </key>
        <!-- MAX ROTATION -->
        <key type="i" name="max-rotation">
            <default>5</default>
            <summary>Maximal rotation a snowflake can have</summary>
            <description />
        </key>
    </schema>
</schemalist>
